{
  "name": "@kirbah/mcp-youtube",
  "version": "0.1.2",
  "description": "High-efficiency YouTube MCP server: Get token-optimized, structured data for your LLMs using the YouTube Data API v3.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-youtube": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch ./src/index.ts",
    "inspector": "npx @modelcontextprotocol/inspector tsx ./src/index.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "node --max-old-space-size=4096 node_modules/eslint/bin/eslint.js .",
    "test": "jest",
    "prepare": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "mcp",
    "youtube",
    "youtube-api",
    "claude",
    "anthropic",
    "model-context-protocol",
    "ai",
    "llm",
    "language-model",
    "tools"
  ],
  "author": "Kiryl Bahdanau",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirbah/mcp-youtube.git"
  },
  "bugs": {
    "url": "https://github.com/kirbah/mcp-youtube/issues"
  },
  "homepage": "https://github.com/kirbah/mcp-youtube#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "dotenv": "^16.5.0",
    "googleapis": "^150.0.1",
    "mongodb": "^6.17.0",
    "tsx": "^4.19.4",
    "youtube-captions-scraper": "^2.0.3",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "30.0.0",
    "@types/node": "^20.19.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "30.0.2",
    "jest-junit": "^16.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
